# Stage 1: Build the Go binary
FROM golang:1.24.4-alpine AS builder

WORKDIR /app

# Copy go module files first
COPY go.mod go.sum ./
RUN go mod download

# Copy the source code
COPY . .

# Build the Go application
RUN go mod tidy && CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o useraccountservice UserAccountService.go

# Stage 2: Minimal runtime image
FROM alpine:latest

RUN apk --no-cache add ca-certificates

WORKDIR /app

# Copy the built binary from the builder stage
COPY --from=builder /app/useraccountservice .

# Expose the port the service runs on
EXPOSE 8081

# Run the application
CMD ["./useraccountservice"]
